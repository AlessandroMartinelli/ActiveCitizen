<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/button_vertical_margin"
    android:gravity="center_horizontal">
    <Button
        android:id="@+id/buttonReportAnIssue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonReviewPastIssues"
        android:layout_marginBottom="@dimen/activity_intraelement_vertical_margin"
        android:text="Report an issue"
        android:onClick="reportAnIssue"/>
    <Button
        android:id="@+id/buttonReviewPastIssues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonReportAnIssue"
        android:layout_marginBottom="@dimen/activity_intraelement_vertical_margin"
        android:text="Review past issues" />
    <Button
        android:id="@+id/buttonBrowseMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonReviewPastIssues"
        android:layout_alignRight="@+id/buttonReviewPastIssues"
        android:layout_below="@+id/buttonReviewPastIssues"
        android:layout_marginBottom="@dimen/activity_intraelement_vertical_margin"
        android:text="Browse map" />
</RelativeLayout>
