<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_small_vertical_margin">
        <TextView
            android:id="@+id/textView_dialogReport_windowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/title_size"
            android:text="Report review"
            />
        <TextView
            android:id="@+id/textView_dialogReport_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_dialogReport_windowTitle"
            android:layout_marginTop="@dimen/activity_intraelement_vertical_margin"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/normal_text_size"
            android:text="Title"
            />
        <TextView
            android:id="@+id/textView_dialogReport_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_dialogReport_title"
            android:layout_marginTop="@dimen/activity_intraelement_vertical_margin"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/normal_text_size"
            android:text="Category"
            />
        <TextView
            android:id="@+id/textView_dialogReport_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_dialogReport_category"
            android:layout_marginTop="@dimen/activity_intraelement_vertical_margin"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/normal_text_size"
            android:text="Details"
            />
        <ImageView
            android:id="@+id/imageView_dialogReport_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_dialogReport_details"
            android:layout_marginTop="@dimen/activity_intraelement_vertical_margin"
            android:layout_centerHorizontal="true"
            />
        <RatingBar
            android:id="@+id/ratingBar_dialogReport_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_dialogReport_image"
            android:layout_marginTop="@dimen/activity_intraelement_vertical_margin"
            android:layout_centerHorizontal="true"
            android:numStars="5" />
    </RelativeLayout>
</ScrollView>