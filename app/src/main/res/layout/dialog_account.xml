<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_small_vertical_margin">
        <TextView
            android:id="@+id/textView_dialogAccount_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/title_size"
            android:text="Welcome!"
            />
        <TextView
            android:id="@+id/textView_dialogAccount_welcomeSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_dialogAccount_welcome"
            android:layout_marginTop="@dimen/activity_intraelement_vertical_margin"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/normal_text_size"
            android:text="Please login to use Active Citizen"
            />
        <View
            android:id="@+id/view_dialogAccount_separator"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/textView_dialogAccount_welcomeSubtitle"
            android:layout_marginTop="@dimen/activity_intraelement_vertical_margin"
            android:background="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/textView_dialogAccount_alreadyRegistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_dialogAccount_separator"
            android:layout_marginTop="@dimen/activity_intraelement_vertical_margin"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/normal_text_size"
            android:text="Already registered?"
            />
        <EditText
            android:id="@+id/editText_dialogAccount_existingUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_dialogAccount_alreadyRegistered"
            android:hint="enter username"
            android:inputType="textCapSentences"
            android:maxLength="20"
            />
        <EditText
            android:id="@+id/editText_dialogAccount_existingPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_dialogAccount_existingUsername"
            android:hint="enter password"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            android:maxLength="20"
            />
        <Button
            android:id="@+id/button_dialogAccount_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_dialogAccount_existingPassword"
            android:layout_centerHorizontal="true"
            android:text="Login"
            />
        <Space
            android:id="@+id/space_dialogAccount"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_below="@+id/button_dialogAccount_login"
            />
        <TextView
            android:id="@+id/textView_dialogAccount_newUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space_dialogAccount"
            android:layout_marginTop="@dimen/activity_intraelement_vertical_margin"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/normal_text_size"
            android:text="New User?"
            />
        <EditText
            android:id="@+id/editText_dialogAccount_newUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_dialogAccount_newUser"
            android:hint="choose a username (max 20 char)"
            android:inputType="textCapSentences"
            android:maxLength="20"
            />
        <EditText
            android:id="@+id/editText_dialogAccount_newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_dialogAccount_newUsername"
            android:hint="choose a password (max 20 char)"
            android:fontFamily="sans-serif"
            android:inputType="textPassword"

            />
        <Button
            android:id="@+id/button_dialogAccount_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_dialogAccount_newPassword"
            android:layout_centerHorizontal="true"
            android:text="Register"
            />
    </RelativeLayout>
</ScrollView>